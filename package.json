{
  "name": "remiteasy",
  "version": "1.0.0",
  "description": "A Celo-based remittance dApp for peer-to-peer transfers with MiniPay integration",
  "scripts": {
    "dev": "concurrently \"npm run dev:contracts\" \"npm run dev:frontend\"",
    "dev:contracts": "cd contracts && npm run node",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:contracts && npm run build:frontend",
    "build:contracts": "cd contracts && npm run compile",
    "build:frontend": "cd frontend && npm run build",
    "test": "cd contracts && npm test",
    "deploy:sepolia": "cd contracts && npm run deploy:sepolia",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepare": "husky || true"
  },
  "keywords": ["celo", "remittance", "minipay", "blockchain", "defi"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
